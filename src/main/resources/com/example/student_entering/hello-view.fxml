<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.student_entering.StController"
          alignment="center" hgap="10" vgap="10">
    <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="firstnameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="lastnameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Birthday:" GridPane.rowIndex="3" GridPane.columnIndex="0" layoutX="50" layoutY="120"/>
    <DatePicker fx:id="birthdayPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" layoutX="150.0" layoutY="120.0" />

    <Label text="Mobile Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="mobilenumberField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="E-mail:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="emailaddressField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label text="Holder's Name:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="holdernameField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Label text="Holder's Mobile Number:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="holdersphonenumberField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>



    <Button text="Add Student" onAction="#addStudent" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>
